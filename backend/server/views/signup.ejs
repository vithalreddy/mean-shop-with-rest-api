<!DOCTYPE html>
<html>
<head>
  <% include ./parts/head.ejs %>
</head>
<body class="login-screen">
  <header>
    <nav class="nav navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand">MEAN Shop  Admin</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="/admin/login">Login</a></li>
            <li><a href="/admin/signup">Sign Up</a></li>
        </ul>
      </div>
    </nav>
  </header>
  <main>
    <div class="login-box">
      <br>
    <p><b>Sign Up to Admin Account</b></p>
    <br>
      <form class="login-form" action="/admin/signup" method="post">
        <span class="input-icon" ><i class="icon_profile"></i></span><hr>

        <div class="input-block">
          <input class="input-box" type="text" name="username" placeholder="Username" autofocus required/>
        </div>
        <div class="input-block">
          <input class="input-box" type="text" name="firstName" placeholder="First Name" autofocus required/>
        </div>
        <div class="input-block">
          <input class="input-box" type="text" name="lastName" placeholder="Last Name" autofocus required/>
        </div>
        <div class="input-block">
          <input class="input-box" type="text" name="email" placeholder="Email" autofocus required/>
        </div>
        <div class="input-block">
          <input class="input-box" type="password" name="password" placeholder="Password" required/>
        </div><br>
        <button class="btn btn-primary btn-block" type="submit" name="submit">Sign Up</button><br>
        <p><b>Have an account?</b> </p>
        <a href="/admin/login"  class="btn btn-danger btn-md btn-block"><b>Log In Here</b></a><br>
      </form>
    </div>
  </main>
  <% include ./parts/footer.ejs %>
</body>
</html>
